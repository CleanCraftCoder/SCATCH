<%- include('./partials/header') %>

<% products.forEach(function(item) { %>
  <div class="w-full flex flex-wrap md:flex-nowrap items-start px-6 md:px-20 py-10 gap-8 border-b border-gray-200">
    <!-- Product Card -->
    <div class="w-full md:w-[60%] flex gap-5">
      <div class="w-32 h-32 rounded-md bg-[<%= item.bgColor %>] flex items-center justify-center overflow-hidden">
        <img class="max-h-full max-w-full object-contain" src="data:image/jpeg;base64,<%= item.image ? item.image.toString('base64') : '' %>" alt="">
      </div>
      <div class="flex flex-col justify-between">
        <h3 class="text-2xl"><%= item.productName %></h3>
        <div class="flex items-center gap-3 mt-4">
          <button class="w-7 h-7 rounded-full bg-gray-200 text-gray-700 text-sm flex items-center justify-center">+</button>
          <div class="px-2 py-1 rounded-md bg-white text-black">1</div>
          <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
        </div>
      </div>

    </div>

    <!-- Price Breakdown -->
    <div class="w-full md:w-[40%] bg-white shadow-sm border border-gray-200 rounded-md p-5">
      <h3 class="text-base font-semibold mb-4">Price Breakdown</h3>
      <div class="px-10">
        <div class="flex justify-between text-sm text-gray-700">
          <h4 class="w-1/3">Total MRP</h4>
          <h4>â‚¹ <%= item.price %></h4>
        </div>
        <div class="flex justify-between mt-2">
          <h4 class="w-1/3">Discount on MRP</h4>
          <h4>â‚¹ 0</h4>
        </div>
        <!-- <div class="flex justify-between mt-2">
          <h4 class="w-1/3">Platform Fee</h4>
          <h4>â‚¹ 20</h4>
        </div> -->
        <!-- <div class="flex justify-between mt-2">
          <h4 class="w-1/3">Shipping Fee</h4>
          <h4>FREE</h4>
        </div> -->
      </div>
      <div class="h-px bg-gray-300 my-4"></div>
      <div class="flex justify-between font-semibold text-base">
        <h3 class="w-1/3 text-xl">Total Amount</h3>
        <h3 class="font-semibold text-xl text-green-600">â‚¹ <%= item.price%></h3>
      </div>
    </div>
  </div>
<% }); %>

<!-- Product Summary -->
<div class="w-full px-20 py-10 bg-gray-50 border-t">
  <h2 class="text-2xl font-bold mb-4">You are buying:</h2>
  <ul class="list-disc ml-6 text-lg">
    <% products.forEach(function(item) { %>
      <li><%= item.productName %> â€” â‚¹ <%= item.price %></li>
    <% }); %>
  </ul>
</div>

<!-- Final Billing Summary -->
<div class="w-full px-20 py-10 border-t-2 border-gray-300 bg-gray-100">
  <h2 class="text-2xl font-bold mb-4">Final Bill Summary</h2>
  <div class="flex justify-between mb-2">
    <span class="text-lg">Total Products</span>
    <span class="text-lg"><%= products.length %></span>
  </div>
  <div class="flex justify-between mb-2">
    <span class="text-lg">Shipping Fee</span>
    <span class="text-lg">FREE</span>
  </div>
  <div class="flex justify-between mb-2">
    <span class="text-lg">Platform Fee (â‚¹20)</span>
    <span class="text-lg">â‚¹ 20</span>
  </div>
  <div class="flex justify-between font-semibold text-xl text-green-700 mt-4">
    <span>Total Amount to Pay</span>
    <span>â‚¹ <%= total %></span>
  </div>
  <div class="mt-6 flex justify-end">
    <form action="/checkout" method="POST">
     <button id="rzp-button" class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700">
    Buy Now
    </button>
    </form>
  </div>
</div>


<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  document.getElementById('rzp-button').onclick = async function (e) {
    e.preventDefault();

    const orderRes = await fetch("/checkout", { method: "POST" });
    const order = await orderRes.json();

    var options = {
      "key": "<%= RAZORPAY_KEY_ID %>",   // ðŸ‘ˆ from backend
      "amount": order.amount,
      "currency": order.currency,
      "name": "SCATCH",
      "description": "Order Payment",
      "order_id": order.id,
      "handler": async function (response) {
        const verifyRes = await fetch("/verify-payment", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(response)
        });
        const result = await verifyRes.json();
        alert("Payment " + result.status);
      },
      "theme": { "color": "#3399cc" }
    };

    const rzp1 = new Razorpay(options);
    rzp1.open();
  }
</script>


